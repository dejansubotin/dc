# Compose env vars (copy to .env and adjust as needed)

# Public URL used in email links; set to your domain in production
APP_BASE_URL=http://localhost:8080

# SMTP (optional; leave empty to disable emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL="Collaborator <no-reply@example.com>"

# Host port for the frontend (mapped to container 80)
PUBLIC_PORT=8081
